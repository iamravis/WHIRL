# Django Backend Environment Variables

# Debug mode (set to False in production)
DEBUG=True

# Secret key (generate a secure random key in production)
SECRET_KEY=your-secret-key-replace-in-production

# Database configuration (SQLite for development)
DATABASE_URL=sqlite:///db.sqlite3

# JWT settings
JWT_SECRET_KEY=your-jwt-secret-key-replace-in-production
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# CORS settings
CORS_ALLOWED_ORIGINS=http://localhost:3000

# RAG service URL
RAG_SERVICE_URL=http://localhost:8002/rag_generate_stream
